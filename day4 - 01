<?php

  //Advent of Code 2015 day 4 - 01

  $input = "bgvyzdsv";

  $x = 0;
  
  $answ = false;

  do {
  
      $md  = md5($input.$x);

      if (substr($md, 0, 5)==="00000") 
      {
        $answ = $x;
      }
      else 
      {
        $x++;
      }

  } while ($answ==false);

  echo $answ;

?>
